<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/blurb"
        android:text="@string/about_blurb"
        android:textStyle="normal|bold"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blurb"
        android:src="@drawable/lahacks"
        android:id="@+id/lahacks"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attributions"
        android:text="@string/attributions"
        android:layout_below="@id/lahacks"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_insert_emoticon_black_24dp"
        android:layout_below="@id/attributions"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/emoticon"/>

</RelativeLayout>
